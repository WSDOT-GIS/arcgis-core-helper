{
  "name": "@wsdot/arcgis-core-helper",
  "description": "Provides enhanced type information for $arcgis.import and a module to add $arcgis.import to the global context when it does not already exist, which will call the built-in dynamic import function.",
  "version": "1.1.2",
  "type": "module",
  "types": "dist/index.d.ts",
  "bin": {
    "arcgis-cdn-dts": "bin/generate-dts.js"
  },
  "files": [
    "dist/**",
    "bin/**"
  ],
  "author": "Jeff Jacobson",
  "license": "Unlicense",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "bunx --bun biome format --write",
    "lint": "bunx --bun biome lint",
    "build": "bunx --bun tsc --build",
    "prepublishOnly": "bun --bun tools/generate-dts.ts dist/index.d.ts && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@tsconfig/bun": "^1.0.8",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/recommended": "^1.0.10",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.8.3",
    "@arcgis/core": "^4.33.9"
  },
  "keywords": [
    "arcgis",
    "type",
    "typing"
  ],
  "repository": "github:WSDOT-GIS/arcgis-core-helper",
  "bugs": "https://github.com/WSDOT-GIS/arcgis-core-helper/issues",
  "homepage": "https://github.com/WSDOT-GIS/arcgis-core-helper#readme"
}